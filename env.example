# Django Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# Django Settings
# ------------------------------------------------------------------------------
DJANGO_SETTINGS_MODULE=config.settings.local
DJANGO_SECRET_KEY=your_secret_key_here_make_it_long_and_random
DJANGO_ADMIN_URL=admin/
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# ------------------------------------------------------------------------------
DATABASE_URL=postgres://your_user:your_password@localhost:5432/your_database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=your_database_name
POSTGRES_USER=your_database_user
POSTGRES_PASSWORD=your_database_password

# Redis Configuration
# ------------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# Email Configuration
# ------------------------------------------------------------------------------
DJANGO_SERVER_EMAIL=your-email@yourdomain.com
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your_mailgun_domain

# Celery Configuration
# ------------------------------------------------------------------------------
CELERY_FLOWER_USER=your_flower_username
CELERY_FLOWER_PASSWORD=your_flower_password

# Security Settings
# ------------------------------------------------------------------------------
DJANGO_SECURE_SSL_REDIRECT=False
DJANGO_ACCOUNT_ALLOW_REGISTRATION=True

# Sentry (Error Monitoring)
# ------------------------------------------------------------------------------
SENTRY_DSN=your_sentry_dsn_here

# OpenAI Configuration
# ------------------------------------------------------------------------------
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.3

# Docker Settings
# ------------------------------------------------------------------------------
USE_DOCKER=no
